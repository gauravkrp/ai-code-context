# GitHub Configuration
GITHUB_ACCESS_TOKEN=your_github_access_token_here
GITHUB_REPOSITORY=owner/repo
GITHUB_BRANCH=main
SUPPORTED_FILE_TYPES=py,js,ts,jsx,tsx
MAX_FILE_SIZE=1000000
EXCLUDED_DIRS=node_modules,.git,__pycache__

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=32
EMBEDDING_MAX_LENGTH=512
NORMALIZE_EMBEDDINGS=true
USE_EMBEDDING_POOLING=true
POOLING_STRATEGY=mean

# Vector Store Configuration
CHROMA_PERSISTENCE_DIR=chroma_db
CHROMA_COLLECTION_NAME=code_chunks
CHROMA_BATCH_SIZE=100
SIMILARITY_METRIC=cosine
USE_GPU=false
NUM_WORKERS=4
BATCH_SIZE=100

# Distributed Store Configuration
USE_DISTRIBUTED_STORE=false
NUM_SHARDS=4
SHARD_SIZE=10000
REPLICATION_FACTOR=2
LOAD_BALANCE_THRESHOLD=0.8

# LLM Configuration
# Choose your LLM provider by uncommenting one of the following
# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
USE_CLAUDE=false

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
USE_OPENAI=true
# MODEL_NAME=o3-mini

# DeepSeek
# DEEPSEEK_API_KEY=your_deepseek_api_key
# USE_DEEPSEEK=false

# Slack Configuration
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_CHANNEL_ID=your_slack_channel_id

# Application Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=2000
MAX_TOKENS=4000
MODEL_NAME=gpt-4
# MODEL_NAME=claude-3-5-sonnet-20240620 

# Logging Configuration (Optional - defaults in settings.py)
LOG_DIR=logs
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Note: All configuration values have sensible defaults in settings.py
# Only override these values if you need different settings 

# RAG Configuration
QUERY_REFORMULATION=true
CONVERSATION_HISTORY=true
MAX_HISTORY_TURNS=5
CONTEXT_WINDOW=3

# Analytics Configuration
METRICS_DIR=metrics
TRACK_SYSTEM_METRICS=true
TRACK_QUERY_METRICS=true
METRICS_RETENTION_DAYS=30

# Documentation Configuration (Optional)
DOCS_OUTPUT_DIR=docs
INCLUDE_API_DOCS=true
INCLUDE_EXAMPLES=true
INCLUDE_DIAGRAMS=false

# Temperature Configuration
TEMPERATURE=0.7
USE_ANTHROPIC=false

# Database settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_code_context
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_RECYCLE=1800

# Redis settings
REDIS_URL=redis://localhost:6379/0

# API settings
API_SECRET_KEY=your-secret-key-here
API_TOKEN_EXPIRATION=86400
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Worker settings
CELERY_CONCURRENCY=4

# Indexing Options
INCREMENTAL_INDEXING=true 